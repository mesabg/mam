{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths":{
      // Environments
      "@environment":["./environments/environment"],
  
      // Global @ms structure
      "@ms/components": ["./@ms/components"],
      "@ms/api": ["./@ms/api"],
  
      // Global @mam structure
      "@mam/api": ["./app/@api"],
      "@mam/components": ["./app/@components"],
      "@mam/instance-components": ["./app/@instance-components"],
      "@mam/pipes": ["./app/@pipes"],
      "@mam/directives": ["./app/@directives"],
      "@mam/pages": ["./app/@pages"],
      "@mam/services": ["./app/@services"],
      "@mam/interfaces": ["./app/#interfaces"]
    }
  }
}
